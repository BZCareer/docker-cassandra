{
  "kind": "Service",
  "apiVersion": "v1",
  "metadata": {
    "name": "monitor-d"
  },
  "spec": {
  "type": "LoadBalancer",
    "ports": [
      {
	    "name":"monitor-d-ui",
        "port": 8080,
        "targetPort": 8080
      },
      {
	    "name":"monitor-d-bkend",
        "port": 8181,
        "targetPort": 8181
      },
      {
	    "name":"monitor-d-db",
        "port": 27017,
        "targetPort": 27017
      },
      {
      "name":"monitor-cassandra-jmx",
        "port": 7199,
        "targetPort": 7199
      },{
	    "name":"monitor-d-db",
        "port": 27017,
        "targetPort": 27017
      },{
	    "name":"monitor-d-db",
        "port": 27017,
        "targetPort": 27017
      },
      {
	    "name":"monitor-d-db",
        "port": 27017,
        "targetPort": 27017
      }

/*
7199 - JMX (was 8080 pre Cassandra 0.8.xx)
7000 - Internode communication (not used if TLS enabled)
7001 - TLS Internode communication (used if TLS enabled)
9160 - Thrift client API
9042 - CQL native transport port
*/

    ],
    "selector": {
      "name": "monitor-d"
    }
  }
}
